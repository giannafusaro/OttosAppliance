<%= (render partial: '/layouts/errors', formats: [:html], locals: { klass: @customer }) if @customer %>

<div class="container">

  <h1> New Customer </h1>

  <div class="panel panel customer-info">
    <div class="panel-heading customer-info">Customer Information</div>
      <div class="panel-body customer-info">
        <%= form_for @customer do |f| %>

          <div class="form-group">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :street_address %>
            <%= f.text_field :street_address, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :city %>
            <%= f.text_field :city, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :zip_code %>
            <%= f.text_field :zip_code, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :phone %>
            <%= f.text_field :phone, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :notes %>
            <%= f.text_field :notes, class: 'form-control' %>
          </div>

          <%= f.submit 'Create Customer', class: 'btn btn-primary' %>

        <% end %>


      </div>
  </div>

</div>
