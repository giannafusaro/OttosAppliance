<%= (render partial: '/layouts/errors', formats: [:html], locals: { klass: @customer }) if @customer %>

<h1> Administrators</h1>

<%= link_to raw("<span class=\"glyphicon glyphicon-plus\"></span> Create New Admin"), new_admin_customer_path,
    class: "btn btn-default btn-lg" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>Name</th>
      <th>Email</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
            <%= link_to raw("<span class=\"glyphicon glyphicon-edit\"></span> Edit"), edit_admin_user_path(user.id),
            class: "btn btn-default" %>
            <%= link_to raw("<span class=\"glyphicon glyphicon-trash\"></span> Delete"), admin_user_path(user.id),
            method: :delete, 'data-confirm'=>'Are you sure?', class: "btn btn-default" %>
        </td>
    <% end %>
  </tbody>
</table>
