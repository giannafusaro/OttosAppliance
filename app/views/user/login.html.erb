<div class="container">
  <h1>Welcome</h1>
  <p class="lead">Please Login</p>
  <%= form_for @user do |f| %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.text_field :password, class: 'form-control' %>
    </div>

    <%= f.submit 'Login', class: 'btn btn-primary' %>
  <% end %>
</div>
